---
interface Props {
  idSection?: string;
  titleSection: String | undefined;
}

const { titleSection, idSection } = Astro.props;
---

<section
  id={idSection}
  class="px-8 md:px-20 lg:px-40 xl:px-72 flex flex-col items-center mt-20 md:mt-0"
>
  <h1 class="text-lg md:text-xl xl:text-3xl font-semibold text-gray-800 my-5">
    {titleSection}
  </h1>
  <slot />
</section>
